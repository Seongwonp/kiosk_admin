<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cafe_kiosk.kiosk_admin.mapper.AdminOptionMapper">

    <resultMap id="MenuOptionResultMap" type="com.cafe_kiosk.kiosk_admin.dto.category.MenuOptionDTO">
        <id property="optionId" column="option_id"/>
        <result property="optionName" column="option_name"/>
        <result property="optionPrice" column="option_price"/>
        <result property="optionType" column="option_type"/>
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <!-- 옵션 목록 조회 (카테고리 기준) -->
    <select id="selectOptionsWithCategoryName" resultMap="MenuOptionResultMap">
        SELECT
        o.option_id,
        o.option_name,
        o.option_price,
        o.option_type,
        o.category_id,
        c.name AS category_name,
        o.is_deleted
        FROM
        menu_option o
        JOIN
        category c ON o.category_id = c.category_id
        <where>
            <if test="categoryId != null and categoryId != 0">
                AND o.category_id = #{categoryId}
            </if>
        </where>
    </select>

    <select id="getOptionById" resultType="com.cafe_kiosk.kiosk_admin.dto.category.MenuOptionDTO">
        SELECT * FROM menu_option WHERE option_id = #{optionId}
    </select>

    <!-- 옵션 추가 -->
    <insert id="insertOption" parameterType="com.cafe_kiosk.kiosk_admin.dto.category.MenuOptionDTO">
        INSERT INTO menu_option (category_id, option_name, option_price, option_type)
        VALUES (#{categoryId}, #{optionName}, #{optionPrice}, #{optionType})
    </insert>

    <!-- 옵션 수정 -->
    <update id="updateOption" parameterType="com.cafe_kiosk.kiosk_admin.dto.category.MenuOptionDTO">
        UPDATE menu_option
        SET option_name = #{optionName},
            option_price = #{optionPrice},
            option_type = #{optionType}
        WHERE option_id = #{optionId}
    </update>

    <!-- 옵션 삭제 -->
    <update id="updateIsDeleted">
        UPDATE menu_option
        SET is_deleted = #{isDeleted}
        WHERE option_id = #{optionId}
    </update>

    <select id="getAllOptions" resultType="com.cafe_kiosk.kiosk_admin.dto.category.MenuOptionDTO">
        SELECT option_id, category_id, option_name, option_price, option_type
        FROM menu_option
    </select>


    <select id="selectMenuOptionsByIds" resultType="com.cafe_kiosk.kiosk_admin.dto.category.MenuOptionDTO">
        SELECT * FROM menu_option
        WHERE option_id IN
        <foreach collection="optionIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>